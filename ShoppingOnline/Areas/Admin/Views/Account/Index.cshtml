@{
    ViewData["Title"] = "Tài khoản của bạn";
}
@section Scripts{
    <script src="~/lib/bootstrap-datepicker/dist/js/bootstrap-datepicker.js"></script>
    <script src="~/app/controllers/account/change-password.js" asp-append-version="true"></script>
    <script src="~/app/controllers/account/index.js" asp-append-version="true"></script>

    <script>
        var account = new AccountController();
        account.initialize();
    </script>
}

@section styles{
    <link href="~/lib/bootstrap-datepicker/dist/css/bootstrap-datepicker3.css" rel="stylesheet" />
    <style>
        #tbl-content tr td:first-child {
            width: 20%;
        }
    </style>
}

<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Thông tin tài khoản</h3>
        </div>

        <div class="title_right">
            <div class="form-group pull-right">
                <button class="btn btn-success" id="btn-update" type="button"><i aria-hidden="true" class="fa fa-pencil"></i></button>
                <button class="btn btn-danger" id="btn-change-password" type="button"><i aria-hidden="true" class="fa fa-lock"></i></button>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_content">
                        <table id="tbl-account" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0">
                            <tbody id="tbl-content"></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script id="table-template" type="x-tmpl-mustache">
        <tr>
            <td>Tên tài khoản</td>
            <td>{{Username}}</td>
        </tr>

        <tr>
            <td>Tên đầy đủ</td>
            <td>{{FullName}}</td>
        </tr>

        <tr>
            <td>Sinh nhật</td>
            <td>{{Birthday}}</td>
        </tr>

        <tr>
            <td>Email</td>
            <td>{{Email}}</td>
        </tr>

        <tr>
            <td>Số điện thoại</td>
            <td>{{PhoneNumber}}</td>
        </tr>

        <tr>
            <td>Địa chỉ</td>
            <td>{{Address}}</td>
        </tr>

        <tr>
            <td>Giới tính</td>
            <td>{{Gender}}</td>
        </tr>
    </script>
</div>

@Html.Partial("_AddEditModal.cshtml")

@Html.Partial("_ChangePasswordModal.cshtml")

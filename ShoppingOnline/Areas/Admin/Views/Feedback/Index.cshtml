
@{
    ViewData["Title"] = "Quản lý phản hồi khách hàng";
}
@section Scripts{

    <script src="~/app/controllers/feedback/index.js" asp-append-version="true"></script>
    <script>
        var feedbackObj = new FeedbackController();
        feedbackObj.initialize();
    </script>
}
@section Styles{

}

<input type="hidden" id="hid-category-id" value="0" />
<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Phản hồi khách hàng</h3>
        </div>

        <div class="title_right">
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" id="txt-search-keyword" class="form-control" placeholder="Từ khoá...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" id="btn-search" type="button">Tìm kiếm!</button>
                    </span>
                </div>
            </div>           
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_content">
                        <table id="tbl-product" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Tên</th>
                                    <th>Email</th>
                                    <th>Tin nhắn</th>
                                    <th>Ngày phản hổi</th>
                                </tr>
                            </thead>
                            <tbody id="tbl-content"></tbody>
                        </table>

                        <div class="row">
                            <div class="col-sm-5">
                                <div class="dataTables_info" id="datatable-checkbox_info" role="status" aria-live="polite">
                                    <select id="ddl-show-page">
                                        <option value="10" selected="selected">10</option>
                                        <option value="20">20</option>
                                        <option value="30">30</option>
                                        <option value="50">50</option>
                                    </select>
                                    <span class="item-per-page">
                                        bản ghi/trang.
                                    </span>
                                    Tổng số bản ghi: <strong id="lbl-total-records"></strong>
                                </div>
                            </div><div class="col-sm-7">
                                <div class="dataTables_paginate paging_simple_numbers" id="datatable-checkbox_paginate">
                                    <ul id="paginationUL"></ul>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>


        <script id="table-template" type="x-tmpl-mustache">
            <tr>                
                <td>{{Name}}</td>
                <td>{{Email}}</td>
                <td>{{Message}}</td>
                <th>{{CreatedDate}}</th>
            </tr>
        </script>
    </div>
</div>


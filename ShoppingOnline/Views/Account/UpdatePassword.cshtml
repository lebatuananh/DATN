
@model ShoppingOnline.WebApplication.Models.AccountViewModel.PasswordViewModel

@{
    ViewData["Title"] = "Mật khẩu";
    ViewData["MetaDescription"] = "Shopping cart";
    ViewData["MetaKeyword"] = "Shopping cart";
}

<!-- Breadcrumbs -->

<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <ul>
                    <li class="home"> <a asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a><span>&raquo;</span></li>
                    <li><a asp-area="" asp-controller="Account" asp-action="Index"><strong>Cập nhật mật khẩu</strong></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumbs End -->
<!-- Main Container -->
<section class="main-container col2-right-layout">
    <div class="main container">
        <div class="row">
            <div class="col-main col-sm-9 col-xs-12">
                <div class="my-account">
                    <div class="page-title">
                        <h2>Cập nhật mật khẩu</h2>
                    </div>
                    <div class="dashboard">
                        <div class="page-content">
                            <div class="account-login">
                                <div class="col-md-12">
                                    <div class="single-input p-bottom50 clearfix">
                                        <form method="post" asp-area="" asp-controller="Account" asp-action="UpdatePassword">
                                            <div class="row">
                                                <div class="col-xs-12">
                                                    <div class="check-title">
                                                        <div asp-validation-summary="All" class="text-danger"></div>
                                                    </div>
                                                </div>

                                                <div class="col-sm-6">
                                                    <label>Mật khẩu hiện tại:</label>
                                                    <div class="input-text">
                                                        <input type="password" asp-for="CurrentPassword" name="currentPassword" class="form-control">
                                                    </div>
                                                </div>

                                                <div class="clearfix"></div>

                                                <div class="col-sm-6">
                                                    <label>Mật khẩu mới:</label>
                                                    <div class="input-text">
                                                        <input type="password" asp-for="Password" name="password" class="form-control">
                                                    </div>
                                                </div>

                                                <div class="clearfix"></div>

                                                <div class="col-sm-6">
                                                    <label>Nhập lại mật khẩu</label>
                                                    <div class="input-text">
                                                        <input type="password" asp-for="ConfirmPassword" name="confirmPassword" class="form-control">
                                                    </div>
                                                </div>
                                                <div class="clearfix"></div>


                                                <div class="col-xs-12">
                                                    <div class="submit-text">
                                                        <button type="submit" class="button"><i class="fa fa-user"></i>&nbsp; <span>Cập nhật</span></button>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <aside class="right sidebar col-sm-3 col-xs-12">
                <div class="sidebar-account block">
                    <div class="sidebar-bar-title">
                        <h3>Tài khoản</h3>
                    </div>
                    <div class="block-content">
                        <ul>
                            <li><a asp-area="" asp-controller="Account" asp-action="UpdateAccount">Cập nhật tài khoản</a></li>
                            <li><a asp-area="" asp-controller="Account" asp-action="UpdatePassword">Thay đổi mật khẩu</a></li>
                        </ul>
                    </div>
                </div>
            </aside>
        </div>
    </div>
</section>
<!-- service section -->
<header>
    <div class="header-container">
        <div class="header-top">
            <div class="container">
                <div class="row">
                    <div class="col-sm-4 col-md-4 col-xs-12">
                        <div class="language-currency-wrapper">
                            <div class="inner-cl">
                                <div class="block block-language form-language">
                                    @*@await Html.PartialAsync("_SelectLanguagePartial")*@
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- top links -->
                    <div class="headerlinkmenu col-md-8 col-sm-8 col-xs-12">

                        <ul class="links">
                            <li>
                                <a href="tel:0333355553"><span>LIÊN HỆ: 0333355553</span></a>
                            </li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li>
                                    <div class="dropdown">
                                        <a class="current-open" href="/account.html"><span>@User.GetSpecificClaim("FullName")</span></a>
                                    </div>
                                </li>
                                <li>
                                    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                                        <a href="#" onclick="document.getElementById('logoutForm').submit()">
                                            <span>ĐĂNG XUẤT</span>
                                        </a>
                                    </form>
                                </li>
                                <li>
                                    <a class="current-open" href="/bill.html"><span>ĐƠN HÀNG</span></a>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a title="login" href="/login.html">
                                        <span>ĐĂNG NHẬP</span>
                                    </a>
                                </li>
                                <li>
                                    <a title="register" href="/register.html">
                                        <span>ĐĂNG KÝ</span>
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>


            </div>
        </div>
    </div>
    <!-- header inner -->
    <div class="header-inner">
        <div class="container">
            <div class="row">
                <div class="col-sm-3 col-xs-12 jtv-logo-block">

                    <!-- Header Logo -->
                    <div class="logo">
                        <a title="e-commerce" asp-action="Index" asp-controller="Home">
                            <img alt="ShopMart" title="ShopMart" src="/client-side/images/logo.png">
                        </a>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-5 col-md-6 jtv-top-search">

                    <!-- Search -->

                    <div class="top-search">
                        <div id="search">
                            <div class="input-group">
                                <input type="text" class="form-control" required placeholder="Nhập từ khoá..." name="keyword">

                            </div>
                        </div>
                    </div>

                    <!-- End Search -->

                </div>
                <div class="col-xs-12 col-sm-4 col-md-3 top-cart">
                    <!-- top cart -->
                    <div class="top-cart-contain">
                        @*<vc:header-cart></vc:header-cart>*@
                        @await Component.InvokeAsync("HeaderCart")
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
